 int main()
 {
   const double RATE = 6.9;
   double deposit;
   // Initializing variables, as well as the "const" modifier which will not change RATE.
   
   cout << "Enter the amount of your deposit $";
   cin >> deposit;
   
   double new_balance;
   new_balance = deposit + deposit * (RATE/100);
  
   cout << "In one year, that deposit will grow to\n" 
   << "$" << new_balance << ": an amount worth waiting for.\n";
   
   return 0;
 }
